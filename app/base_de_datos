CREATE SCHEMA ark
DEFAULT CHARACTER SET utf8
COLLATE utf8_spanish2_ci;

USE ark;
CREATE TABLE USUARIO (
  Id_Usuario INT NOT NULL
  PRIMARY KEY (Id_Usuario)
);

CREATE TABLE MASCOTA (
  Id_Mascota INT NOT NULL,
  Nombre VARCHAR(250) DEFAULT NULL,
  Tipo VARCHAR(250) DEFAULT NULL,
  Raza VARCHAR(250) DEFAULT NULL,
  Genero VARCHAR(250) DEFAULT NULL,
  PRIMARY KEY (Id_Mascota)
);

CREATE TABLE SALUDMASCOTA (
  Id_Informe INT NOT NULL,
  Psicologico VARCHAR(250) DEFAULT NULL,
  Medicacion VARCHAR(250) DEFAULT NULL,
  Vacunas VARCHAR(250) DEFAULT NULL,
  Id_Mascota INT NOT NULL,
  PRIMARY KEY (Id_Informe),
  CONSTRAINT FOREIGN KEY (Id_Mascota) REFERENCES MASCOTA (Id_Mascota)
);

CREATE TABLE EVENTO (
  Id_Evento INT NOT NULL,
  Nombre VARCHAR(250) DEFAULT NULL,
  Email VARCHAR(250) DEFAULT NULL,
  Password VARCHAR(250) DEFAULT NULL,
  Imagen VARCHAR(250) DEFAULT NULL,
  PRIMARY KEY (Id_Evento)
);

CREATE TABLE REALIZA_RU (
  Id_Mascota INT NOT NULL,
  Id_Evento INT NOT NULL,
  Fecha DATE DEFAULT NULL,
  Hora DATE DEFAULT NULL,
  PRIMARY KEY (Id_Mascota, Id_Evento),
  CONSTRAINT FOREIGN KEY (Id_Mascota) REFERENCES MASCOTA (Id_Mascota),
  CONSTRAINT FOREIGN KEY (Id_Evento) REFERENCES EVENTO (Id_Evento)
);

CREATE TABLE PARTICIPA_AC (
  Id_Mascota INT NOT NULL,
  Id_Evento INT NOT NULL,
  Fecha DATE DEFAULT NULL,
  Hora DATE DEFAULT NULL,
  PRIMARY KEY (Id_Mascota, Id_Evento),
  CONSTRAINT FOREIGN KEY (Id_Mascota) REFERENCES MASCOTA (Id_Mascota),
  CONSTRAINT FOREIGN KEY (Id_Evento) REFERENCES EVENTO (Id_Evento)
);

CREATE TABLE HACE_RE (
  Id_Mascota INT NOT NULL,
  Id_Evento INT NOT NULL,
  Fecha DATE DEFAULT NULL,
  Hora DATE DEFAULT NULL,
  PRIMARY KEY (Id_Mascota, Id_Evento),
  CONSTRAINT FOREIGN KEY (Id_Mascota) REFERENCES MASCOTA (Id_Mascota),
  CONSTRAINT FOREIGN KEY (Id_Evento) REFERENCES EVENTO (Id_Evento)
);