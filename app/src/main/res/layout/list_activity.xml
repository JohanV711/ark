<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#088F83"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:text="Mis actividades"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ListActivity"
        android:layout_width="match_parent"
        android:layout_height="459dp"
        android:background="#C3673AB7"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:translationX="180dp"
        android:translationY="100dp"
        app:backgroundTint="#ECECEC"
        app:maxImageSize="40dp"
        app:srcCompat="@drawable/anadir" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃ±adir actividad"
        android:textColor="#FFFFFF"
        android:translationX="155dp"
        android:translationY="-25dp" />


</LinearLayout>